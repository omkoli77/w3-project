<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="form-container col-8 offset-2">
        <h1>new user create</h1>
        <form action="/users" method="post" class="mt-3" enctype="multipart/form-data">
            <label for="name" class="form-label mt-3">UserName :-</label>
            <input type="text" id="name" name="user[name]" placeholder="Enter your Name...!" class="form-control" required>

            <label for="email" class="form-label mt-3">Email :-</label>
            <input type="email" id="email" name="user[email]" placeholder="Enter Your Email...!" class="form-control" required>

            <label for="password" class="form-label mt-3">Password :-</label>
            <input type="password" id="password" name="user[password]" placeholder="Enter Your Password" class="form-control" required>

            <label for="imgage" class="form-label mt3">Image :-</label>
            <input type="file" id="image" name="user[image]" placeholder="check" class="form-control" required>

            <button class="btn btn-outline-success mt-3">Create Account</button>
        </form>
    </div>
</body>